{
  "compilerOptions": {
    "target": "es2023",
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "dist/renderer",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "lib": ["DOM", "DOM.Iterable", "ES2023"]
  },
  "include": ["src/renderer/**/*", "src/shared/**/*"]
}
